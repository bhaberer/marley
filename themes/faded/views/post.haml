%h2 
  %a{:href => "/"}
    = Marley::Configuration.blog.title
#article
  .post
    %h1=h @post.title
    %span.meta
      #{human_date @post.published_on}
      %a{:href => "#comments"}
        #{@post.comments.size}&nbsp;comments
      &nbsp;
      %a{:href => "http://#{hostname}/#{@post.id}/feed", :class => "image"} Feed
  - if @post.meta['categories']
    .categories
      %p
        %em Categories:
        = @post.meta['categories'].join(', ')
  .body
    ~ @post.body_html
